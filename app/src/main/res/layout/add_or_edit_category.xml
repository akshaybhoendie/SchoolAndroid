<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="sr.unasat.financialapp.activities.main.fragments.AddCategoryDialog">

    <!-- TODO: Update blank fragment layout -->
<RelativeLayout
    android:layout_width="250dp"
    android:layout_height="250dp">
    <TextView
        android:text="category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/categoryHeader"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/categoryHeader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:id="@+id/category_name_input"
        android:hint="category name"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/category_name_input"
        android:layout_alignLeft="@+id/category_name_input"
        android:layout_alignStart="@+id/category_name_input"
        android:layout_marginTop="33dp"
        android:id="@+id/category_budget_input"
        android:hint="0.00"
        android:textAlignment="center" />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="100dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/v"
            android:id="@+id/ok_button"
            android:onClick="okCategoryEvent"
            android:layout_marginRight="36dp"
            android:layout_marginEnd="36dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/x"
            android:id="@+id/cancel_button"
            android:onClick="cancelCategoryEvent"
            android:layout_marginLeft="41dp"
            android:layout_marginStart="41dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>



</LinearLayout>
