<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/transaction_card"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:elevation="@dimen/cardview_compat_inset_shadow"
    android:background="@color/GhostWhite"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <TextView
        android:text="0.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/transaction_value"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="71dp"
        android:layout_marginEnd="71dp" />

        <TextView
        android:text="description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/transaction_descr"
            android:layout_alignBottom="@+id/category_icon_at_balance"
            android:layout_alignLeft="@+id/tran_name"
            android:layout_alignStart="@+id/tran_name" />

        <TextView
            android:text="tran_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tran_name"
            android:textStyle="normal|bold"
            android:textSize="14sp"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:layout_alignTop="@+id/category_icon_at_balance"
            android:layout_toRightOf="@+id/category_icon_at_balance"
            android:layout_toEndOf="@+id/category_icon_at_balance" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/category_icon_at_balance"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/transaction_descr"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/transaction_id_onCard"
            android:visibility="gone"/>
    </RelativeLayout>




</LinearLayout>