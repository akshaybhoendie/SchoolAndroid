<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="sr.unasat.financialapp.activities.main.fragments.dialogs.AddBudgetDialog"
    android:layout_width="250dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="47dp"
            android:id="@+id/budget_cat_spinner"
            android:layout_below="@+id/budget_dialog_title"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:layout_marginTop="24dp"
            android:id="@+id/budget_dialog_input"
            android:hint="set budget "
            android:textAlignment="center"
            android:layout_below="@+id/budget_cat_spinner"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/budget_dialog_title"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/v"
            android:id="@+id/ok_budget"
            android:onClick="okBudgetDialogEvent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="45dp"
            android:layout_marginEnd="45dp" />

        <ImageView
            app:srcCompat="@drawable/x"
            android:id="@+id/cancel_budget"
            android:onClick="cancelBudgetDialogEvent"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp" />

    </RelativeLayout>

</LinearLayout>
