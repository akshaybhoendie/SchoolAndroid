<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/budget_category_icon"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="cat_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/category_id"
            android:textSize="8sp"
            android:visibility="gone"
            android:layout_alignTop="@+id/delete_category" />

        <TextView
            android:text="@string/categories"
            android:layout_height="wrap_content"
            android:id="@+id/budget_category_name_cat"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_width="100dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/budget_category_icon"
            android:layout_toEndOf="@+id/budget_category_icon" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_edit"
            android:id="@+id/edit_category"
            android:background="@color/WhiteSmoke"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/delete_category"
            android:layout_toStartOf="@+id/delete_category"
            android:layout_marginRight="29dp"
            android:layout_marginEnd="29dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_delete"
            android:layout_marginRight="14dp"
            android:layout_marginEnd="14dp"
            android:id="@+id/delete_category"
            android:background="@color/WhiteSmoke"
            android:layout_alignTop="@+id/edit_category"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:text="remaining : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:text="remaining_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/budget_remaining_value"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

</RelativeLayout>
    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_width="200dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progresstext"
        android:textAlignment="center" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/LightGrey">

    </View>


</LinearLayout>